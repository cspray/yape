#!/usr/bin/env php
<?php

require dirname(__DIR__) . '/vendor/autoload.php';

use Cspray\Yape\Console\Configuration\CreateEnumCommandConfig;
use Cspray\Yape\Console\CreateEnumCommand;
use Cspray\Yape\EnumDefinitionFactory;
use Cspray\Yape\TemplateEnumCodeGenerator;
use Symfony\Component\Console\Application;

$app = new Application();

$app->setName('yape Enum Generator');
$app->setVersion('2.0.0-rc1');

$templateEnumCodeGenerator = new TemplateEnumCodeGenerator();
$config = new CreateEnumCommandConfig(getcwd(), 'src/Enums');

$createEnumCommand = new CreateEnumCommand($templateEnumCodeGenerator, new EnumDefinitionFactory(), $config);
$app->add($createEnumCommand);

$app->run();
